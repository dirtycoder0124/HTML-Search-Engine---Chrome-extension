{
  "manifest_version": 3,
  "name": "HTML_Search_Engine",
  "version": "3.1",
  "description": "Search saved keywords in HTML source + internal links, only on sites you enable.",
  "permissions": ["scripting", "tabs", "storage", "webNavigation", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
